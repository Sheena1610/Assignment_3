<div class="container mt-3 mb-10">
  <h2 class="text-center mt-5 mb-5 h1">Welcome Back</h2>
  <form method="post" action="log-in">
    <div class="mt-3">
      <input
        type="text"
        name="email"
        class="form-control"
        placeholder="Email Address"
        value="{{this.data.email}}"
      />
      <p class="error">{{this.message.email}}</p>
    </div>
    <div class="mt-3">
      <input
        type="password"
        name="password"
        class="form-control"
        placeholder="Password"
        value="{{this.data.password}}"
      />
      <p class="error">{{this.message.password}}</p>
    </div>
    <div class="mt-3">
      <input type="submit" value="Log in" class="btn btn-dark" />
    </div>
  </form>
</div>